<!DOCTYPE html>
<html lang="en">
<%= partial "partials/head" %>
  <body id="page-top" data-spy="scroll" data-target=".navbar-fixed-top">
    <%= partial "partials/nav" %>
    <section id="bio" class="container content-section">
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1">
              <h1><%= current_page.data.title %></h1>
              <p><em><%= current_page.data.time %></em></p>
              <% if current_page.data.image %>
                <div class="pull-right col-xs-12 col-sm-6"><img class="img-responsive" src="/images/shows/<%=current_page.data.image %>" title="<%= current_page.data.title %>" alt="<%= current_page.data.title %>"/></div>
              <% end %>
              <%= current_page.data.bio %>
              <% if current_page.data.url %>
                <p>Website: <a href="<%=current_page.data.url%>" title="<%=current_page.data.title%>"><%=current_page.data.title%></a></p>
              <% end %>
            </div>
        </div>
    </section>
    <%= yield %>
    <%= partial "partials/footer" %>
    <%= partial "partials/bottom_js" %>
  </body>
</html>
