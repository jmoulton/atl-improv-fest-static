---
layout: "layout"
---
<section class="container content-section bio">
  <div class="row">
    <div class="col-12">
      <h2><%= bio.name %></h2>
      <% if bio.headshot %>
        <img class="img-responsive center-block" src="/images/bios/<%= bio.headshot %>" title="<%= bio.name %>" alt="<%= bio.name %>"/>
      <% end %>
      <%= markdown(bio.bio) %>
    </div>
  </div>
</section>
